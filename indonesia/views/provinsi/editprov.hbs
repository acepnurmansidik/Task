
{{>header}}

{{>navbar}}
    <!-- ====== Banner Start ====== -->
    <section class="ud-page-banner">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="ud-banner-content">
              <h1>Tambah Provinsi Page</h1>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- ====== Banner End ====== -->

    <!-- ====== Contact Start ====== -->
    <section id="contact" class="ud-contact">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-xl-12 col-lg-5">
            <div
              class="ud-contact-form-wrapper wow fadeInUp"
              data-wow-delay=".2s"
            >
              <h3 class="ud-contact-form-title">Tambah Provinsi Baru</h3>
              {{#each newProvs}}
              <form action="/editprov/{{this.id}}?_method=PUT" method="POST">
                {{!-- <div class="ud-form-group">
                  <label for="name">Nama Provinsi*</label>
                  <input
                    type="hidden"
                    name="id"
                  />
                </div> --}}
                <div class="ud-form-group">
                  <label for="name">Nama Provinsi*</label>
                  <input
                    type="text"
                    name="nama"
                    value="{{this.nama}}"
                  />
                </div>
                <div class="ud-form-group">
                  <label for="diresmikan">Diresmikan*</label>
                  <input
                    type="date"
                    name="diresmikan"
                    {{this.diresmikan}}
                  />
                </div>
                <div class="ud-form-group">
                  <label for="pulau">Pulau*</label>
                  <select name="pulau" id="">
                      <option value="Sumatera">Sumatera</option>
                      <option value="Jawa">Jawa</option>
                      <option value="Kep. Nusa Tenggara">Kep. Nusa Tenggara</option>
                      <option value="Kalimantan">Kalimantan</option>
                      <option value="Sulawesi">Sulawesi</option>
                      <option value="Kep. Maluku">Kep. Maluku</option>
                      <option value="Papua">Papua</option>
                  </select>
                </div>
                {{!-- <div class="ud-form-group">
                  <label for="photo">Photo*</label>
                  <input
                    type="file"
                    name="photo"
                  />
                </div> --}}
                <img src="" id="perview" alt="">
                <div class="ud-form-group mb-0">
                  <button type="submit" class="ud-main-btn">
                    Submit
                  </button>
                </div>
              </form>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </section>

{{>footer}}
